.container {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  overflow: hidden;
}
.headerNav {
  height: 48px;
  line-height: 48px;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 1;
  background: #ffffff;
}
.headerNav::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1rpx;
  background: #eaeaea;
}
.navItem {
  width: 50%;
  font-size: 1.1em;
  text-align: center;
  display: inline-block;
  position: relative;
}
.navItem.cur::after {
  content: '';
  display: block;
  position: absolute;
  left: 30%;
  bottom: 0;
  width: 40%;
  height: 2px;
  background: #fc661f;
  z-index: 1;
}
.tradeList {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: #efefef;
  padding: 48px 0 0;
}
.tradeItem {
  padding: 0 10px;
  margin-top: 12px;
}
.tradeBox {
  background: #ffffff;
  overflow: hidden;
}
.tradeTitle {
  height: 48px;
  line-height: 48px;
  padding: 0 10px;
  background: #ffffff;
  border-bottom: 1rpx solid #cccccc;
}
.tradeState {
  float: right;
  color: #666666;
  padding-right: 5px;
}
.tradeDate {
  float: left;
  color: #666666;
}
.tradeImages {
  height: 80px;
  padding: 20px;
  position: relative;
}
.productImgs {
  display: inline-block;
  border-radius: 5px;
  border: 1rpx solid #acacac;
  margin-right: 10px;
}
.productImgs > image {
  width: 80px;
  height: 80px;
  transform: scale(0.75);
  border-radius: 40px;
}
.rightNav {
  position: absolute;
  right: 0;
  top: 0;
  width: 30px;
  height: 120px;
}
.rightNav image {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 16px;
  height: 16px;
}
.tradeInfo {
  height: 48px;
  line-height: 48px;
  padding: 0 10px;
}
.summary, .tradeAction, .tradeAction > view {
  display: inline-block;
}
.tradeAction {
  float: right;
}
.payTrade, .arrived, .cancelTrade {
  border: 1rpx solid #efefef;
  border-radius: 3px;
  display: inline-block;
  height: 30px;
  line-height: 30px;
  padding: 0 8px;
  margin-left: 10px;
}
.payTrade, .arrived {
  background: rgb(249, 79, 26);
  color: #ffffff;
}
.cancelTrade {
  background: #ffffff;
  border-color: rgb(249, 79, 26);
  color: rgb(249, 79, 26);
}
.UNPAID {
  color: #fc661f;
}
.PAID {
  color: #2595D7;
}
.loadingBottom {
  text-align: center;
  height: 60px;
  line-height: 60px;
  color: #acacac;
}
.splitTop {
  position: relative;
  border-top: 1rpx dashed #aaaaaa;
}
.splitTop::before, .splitTop::after {
  content: '';
  display: block;
  position: absolute;
  top: -4px;
  left: -4px;
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background: #ececec;
}
.splitTop::after {
  left: auto;
  right: -4px;
}