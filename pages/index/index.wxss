.storeInfo {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 1;
  background: #ffffff;
}
.headerBg {
  /* background: -webkit-gradient(linear, 0 0, 0 48, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 0.03))); */
  background: #ffffff;
  border-bottom: 1rpx solid #dddddd;
}
.changeStore {
  max-width: 62%;
  position: absolute;
  top: 8px;
  left: 10px;
  padding-left: 10px;
  padding-right: 8px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  height: 32px;
  line-height: 32px;
  color: #ffffff;
  background: rgba(0, 0, 0, 0.35);
  border-radius: 16px;
}
image.locator {
  position: relative;
  top: 3px;
}
.changeStore text {
   margin: 0 3px; 
}
.easyPay {
  width: 10%;
  position: absolute;
  top: 0;
  right: 15%;
  height: 100%;
  line-height: 49px;
  text-align: center;
}
.tradeCenter {
  width: 15%;
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  line-height: 49px;
  text-align: center;
}
.easyPay image, .tradeCenter image {
  position: relative;
  top: 2px;
}
.textInfo {
  width: 100%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  font-size: 10px;
  height: 20px;
  line-height: 20px;
  color: #fc661f;
}
.unFinishTrades {
  position: absolute;
  top: 2px;
  left: 54%;
  display: inline-block;
  height: 14px;
  min-width: 14px;
  line-height: 14px;
  text-align: center;
  font-size: 11px;
  border-radius: 7px;
  padding: 0 2px;
  box-sizing: border-box;
  background: #fc661f;
  color: #ffffff;
  transform: scale(0.85);
  z-index: 1;
}
.contentBox{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
}
.navBar {
  position: absolute;
  left: 0;
  width: 24%;
  background: #f8f8f8;
  transition: height .3s ease-in-out;
}
.navItem {
  line-height: 60px;
  box-sizing: border-box;
  /* border-bottom: 1rpx solid #ececec; */
  position: relative;
}
.navItem.cur {
  background: #ffffff;
}
.navItem.cur .lightOn {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 5px;
  display: block;
  background: #fc661f;
}
.navName {
  text-align: center;
}
.goodsList {
  position: absolute;
  right: 0;
  width: 76%;
  background: #ffffff;
  transition: height .3s ease-in-out;
}
.cateName {
  display: flex;
  align-content: center;
  align-items: center;
  background: #eeeeee;
  padding-left: 8px;
  margin-left: 10px;
}
.goodsPart {
  background: #ffffff;
  box-sizing: border-box;
}
.goodsPart:last-child, .navItem:last-child {
  border-bottom: none;
}
.goodsItem {
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
}
.goodsItem::after {
  content: '';
  display: inline-block;
  position: absolute;
  bottom: 0;
  right: 0;
  width: 95%;
  height: 0rpx;
  border-bottom: 1rpx dashed #eaeaea;
}
.goodsItem:last-child::after {
  display: none;
}
.goodsLogo {
  width: 60px;
  height: 60px;
  position: relative;
  left: 10px;
  top: 10px;
  border-radius: 50%;
}
.goodsName {
  position: absolute;
  top: 15px;
  left: 80px;
  width: 70%;
  font-size: 16px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.goodsPrice {
  position: absolute;
  bottom: 15px;
  left: 80px;
  width: 21%;
  color: #fc661f;
}
.moneySign {
  font-size: .85em;
}
.addToCart {
  position: absolute;
  bottom: 10px;
  right: 10px;
  width: 40%;
  height: 30px;
  text-align: right;
}
.reduceOne, .addOne, .amount {
  text-align: center;
  display: inline-block;
  width: 48px;
  height: 48px;
  line-height: 48px;
  position: absolute;
  bottom: -9px;
}
.addOne {
  right: 0;
} 
.reduceOne {
  right: 70px;
}
.amount {
  width: 38px;
  right: 40px;
  font-size: 18px;
}
.reduceIcon, .addIcon {
  height: 22px;
  width: 22px;
  border-radius: 50%;
}
.promitionInfo {
  position: absolute;
  left: 0;
  top: -24px;
  width: 100%;
  font-size: 12px;
  background: #ffedc0;
  text-align: center;
}
.swiperItem {
  color: #2f2f2f;
  padding: 0 4px;
}
.miniCart {
  position: absolute;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  background: #ffffff;
  padding-top: 36px;
  transition: bottom .3s ease-in-out;
  overflow: hidden;
}
.miniCart .reduceIcon, .miniCart .addIcon {
  height: 20px;
  width: 20px;
}
.miniCart .title {
  height: 36px;
  line-height: 36px;
  background: #ececec;
  padding: 0 12px;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}
.miniCart .title text {
  float: right;
}
.cartItems {
  box-sizing: border-box;
}
.miniCartItem {
  position: relative;
  height: 50px;
  padding-left: 12px;
}
.miniCartItem::after {
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  right: 0;
  width: 95%;
  height: 0;
  border-bottom: 1rpx dashed #ececec;
}
.miniCartItem:last-child::after {
  display: none;
}
.cartItemName, .cartItemPrice {
  height: 50px;
  line-height: 50px;
  display: inline-block;
}
.cartItemPrice {
  position: absolute;
  top: 0;
  right: 150px;
  color: #fc661f;
}
.cartItemPrice text {
  font-size: 0.75em;
  padding-right: 3px;
}
.cartIcon {
  width: 48px;
  height: 48px;
  border-radius: 50%;
}
.totalAmount {
  position: absolute;
  left: 32px;
  top: 5px;
  height: 14px;
  min-width: 14px;
  line-height: 14px;
  text-align: center;
  font-size: 11px;
  border-radius: 7px;
  padding: 0 2px;
  box-sizing: border-box;
  background: #fc661f;
  color: #ffffff;
}
.cartBar {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 1;
  /* overflow: hidden;  */
  height: 100%;
  line-height: inherit;
  background: #ffffff;
  border-top: 1rpx solid #ececec;
  transition: height .3s ease-in-out;
}
.cartIcon image {
  position: absolute;
  left: 8px;
  top: 8px;
  width: 30px;
  height: 30px;
}
.pay {
  position: absolute;
  top: 0;
  right: 0;
  width: 110px;
  height: 49px;
  font-size: 16px;
  line-height: 49px;
  text-align: center;
  background: #fc661f;
  color: #ffffff;
}
.totalPrice {
  position: absolute;
  left: 60px;
  top: 0;
  color: #fc661f;
  height: 49px;
  line-height: 49px;
}
.totalPrice text {
  font-size: 18px;
  padding: 0 3px;
}
.loading {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.08);
}
.loadingBox, .loadingBox image {
  width: 45px;
  height: 45px;
  border-radius: 5px;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background: rgba(0, 0, 0, 0.15);
}
.loadingBox image {
  width: 45%;
  height: 45%;
  background: transparent;
}