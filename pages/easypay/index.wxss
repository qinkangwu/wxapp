.easypayBox {
  background: #efefef;
  padding: 10px;
  box-sizing: border-box;
}
.headerLogo {
  height: 0;
  padding-bottom: 36.12%;
  background: #F2F3F2;
  background-image: url(http://xs1h-image.oss-cn-shanghai.aliyuncs.com/xs1h_banner_1.png);
  background-size: cover;
}
.storeWithInput {
  background: #ffffff;
  padding: 10px 30px;
}
.storeName {
  height: 45px;
  font-size: 16px;
  line-height: 45px;
}
.inputMoney {
  height: 60px;
  position: relative;
}
.inputMoney input {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 60px;
  font-size: 48px;
  line-height: 48px;
  padding: 6px 20px;
  box-sizing: border-box;
}
.moneySign {
  position: absolute;
  left: 0;
  bottom: 6px;
  font-size: 26px;
}
.submit {
  height: 120px;
  line-height: 120px;
  background: #ffffff;
  text-align: center;
}
.submit > view {
  display: inline-block;
  margin: auto;
  height: 40px;
  line-height: 40px;
  width: 80%;
  color: #ffffff;
  background: #fc661f;
  border-radius: 5px;
}
.splitTop {
  position: relative;
  border-top: 1rpx dashed #cccccc;
}
.splitTop::before, .splitTop::after {
  content: '';
  display: block;
  position: absolute;
  top: -4px;
  left: -4px;
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background: #ececec;
}
.splitTop::after {
  left: auto;
  right: -4px;
}
.payOk {
  background: #ffffff;
  text-align: center;
}