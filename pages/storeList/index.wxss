.contentBox, .mapSearch, .keySearch {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
}
.searchBar {
  position: relative;
  border-bottom: 1rpx solid #dcdcdc;
  z-index: 1;
  box-sizing: border-box;
}
.searchBar input {
  width: 94%;
  position: absolute;
  padding: 0;
  margin: auto 3%;
  padding-left: 8%;
  background: #ececec;
  box-sizing: border-box;
}
.searchIcon {
  position: absolute;
  z-index: 1;
}
.mapBox {
  position: relative;
  width: 100%;
  height: 0;
}
#map {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.searchResult {
  position: relative;
}
.storeItem {
  padding-left: 1em;
  overflow: hidden;
}
.storeDetail {
  position: relative;
  height: 60px;
  border-bottom: 1rpx solid #ececec;
}
.storeName {
  font-size: 14px;
  position: absolute;
  top: 0;
  left: 0;
  height: 42px;
  line-height: 42px;
}
.storeDistance {
  position: absolute;
  top: 0;
  right: 0;
  text-align: right;
  height: 42px;
  line-height: 42px;
  font-size: 12px;
  padding-right: 1em;
  color: #acacac;
}
.storePosition {
  font-size: 11px;
  color: #888888;
  position: absolute;
  top: 30px;
  left: 0;
  height: 25px;
  line-height: 25px;
}
.storeDetail.lightOn .storeName {
  color: rgb(250, 97, 62);
}
.mapSearchLoading {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
}
.loadingBox, .loadingBox image {
  width: 45px;
  height: 45px;
  border-radius: 5px;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background: rgba(0, 0, 0, 0.35);
}
.keySearch .loadingBox {
  bottom: 50%;
}
.loadingBox image {
  width: 45%;
  height: 45%;
  background: transparent;
}
.toMapSearch, .toKeySearch {
  height: 70px;
  line-height: 70px;
  text-align: center;
  color: #dcdcdc;
}