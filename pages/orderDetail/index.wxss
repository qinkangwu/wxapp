.container {
  width: 100%;
  height: 100%;
  background: #ececec;
}
.detailBox {
  padding: 10px;
}

.tradeDetail {
  margin-top: 10px;
  background: #ffffff;
}
.storeName {
  height: 48px;
  line-height: 48px;
  position: relative;
  padding-left: 48px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  background: #fafafa;
  border-bottom: 1rpx solid #f8f8f8;
}
.storeIcon {
  position: absolute;
  width: 27px;
  height: 27px;
  top: 10px;
  left: 10px;
}
.goodsList, .promationInfo {
  position: relative;
}
.goodsItem {
  position: relative;
  height: 60px;
  line-height: 60px;
  padding-left: 60px;
  overflow: hidden; 
  transition: height .3s ease-in-out;
}
.goodsItem::after {
  content: '';
  display: inline-block;
  position: absolute;
  bottom: 0;
  height: 0;
  right: 5%;
  width: 90%;
  border-bottom: 1rpx solid #f3f3f3;
}
.goodsItem:last-child::after {
  display: none;
}
.goodsLogo {
  width: 50px;
  height: 50px;
  position: absolute;
  left: 5px;
  top: 5px;
  border-radius: 50%;
}
.cartItemName {
  width: 100%;
  padding-right: 110px;
  box-sizing: border-box;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.cartItemAmount, .cartItemPrice {
  position: absolute;
  right: 10px;
  top: 0;
  width: 70px;
  text-align: right;
  display: inline-block;
  color: #fc661f;
}
.cartItemAmount {
  right: 80px;
}
.promotionItem, .promationItem, .contactStore, .infoItem {
  height: 48px;
  line-height: 48px;
  padding: 0 10px;
  font-size: 13px;
  position: relative;
  clear: both;
}
.commentThing {
  background: #ffffff;
  margin-top: 10px;
}
.commentsInfo {
  min-height: 48px;
  line-height: 48px;
  padding: 0 10px;
  font-size: 13px;
  position: relative;
}
.contactStore {
  text-align: center;
  font-weight: 600;
}
.contactStore image {
  display: inline-block;
  position: relative;
  width: 16px;
  height: 16px;
  top: 4px;
}
.promotionItem::after, .promationItem::after, .infoItem::after {
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  left: 2.5%;
  width: 95%;
  height: 0;
  border-top: 1rpx solid #f5f5f5;
  clear: both;
}
.savePrice {
  color: #fc661f;
  float: right;
}
.paySummary {
  height: 46px;
  line-height: 46px;
  padding: 0 10px;
  background: #ffffff;
}
.saveInfo, .payInfo {
  position: absolute;
  top: 0;
  right: 0;
  width: 25%;
  text-align: right;
  padding-right: 10px;
  display: inline-block;
}
.splitTop {
  position: relative;
  border-top: 1rpx dashed #cccccc;
  z-index: 1;
}
.splitTop::before, .splitTop::after {
  content: '';
  display: block;
  position: absolute;
  top: -4px;
  left: -4px;
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background: #ececec;
  z-index: 1;
}
.splitTop::after {
  left: auto;
  right: -4px;
}
.moneySign {
  font-size: .75em;
}
.tradeExtroInfo {
  margin-top: 10px;
  background: #ffffff;
}
.saveInfo {
  color: #999999;
  right: 25%;
}
.payInfo {
  font-weight: 450;
}
.payInfo > view {
  display: inline-block;
  color: #fc661f;
}
.infoItem > text {
  float: right;
}
.couponSign, .offSign {
  color: #ffffff;
  background: #ff625d;
  width: 18px;
  height: 18px;
  line-height: 18px;
  text-align: center;
  display: inline-block;
  margin-right: 4px;
}
.offSign {
  background: #c084e1;
}
.loading {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.25);
  z-index: 2;
}
.loadingBox, .loadingBox image {
  width: 45px;
  height: 45px;
  border-radius: 5px;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background: rgba(0, 0, 0, 0.35);
}
.loadingBox image {
  width: 45%;
  height: 45%;
  background: transparent;
}

.statusBar {
  text-align: center;
  background: #ffffff;
}
.statusInfo {
  font-size: 20px;
  color: #fc661f;
  height: 100px;
  line-height: 100px;
}
.actionInfo {
  font-size: 14px;
  text-align: center;
  background: #ffffff;
  height: 48px;
  line-height: 48px;
  margin-top: -20px;
}
.cancel, .lightOn {
  display: inline-block;
  padding: 0;
  position: relative;
  width: 80px;
  height: 30px;
  line-height: 30px;
  border-radius: 3px;
  border: 1rpx solid #cccccc;
}
.btnSplit {
  display: inline-block;
  width: 30px;
  height: 1px;
}
.cancel{
  color: #aaaaaa;
}
.lightOn {
  background: #fc661f;
  color: #ffffff;
  border: none!important; 
}
.takeNo {
  height: 48px;
  line-height: 48px;
  background: #ffffff;
  padding: 0 10px;
  text-align: right;
}
.takeNo text {
  float: left;
}